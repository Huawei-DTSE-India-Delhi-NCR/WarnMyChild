<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huawei.parentapp">
    <!-- Camera permission -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- File reading permission -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EntryChoiceActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".kotlin.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".kotlin.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".kotlin.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--java packages-->

        <activity
            android:name=".java.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".java.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".java.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>